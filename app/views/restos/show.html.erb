
<div class="show-image">
<%= image_tag @resto.image.url %>
</div>
<div class="w-100">

<div class="row featurette">
  <div class="col-md-6 phone pl-5">
    <div id="carouselExampleIndicators" class="carousel slide mx-5 p-5" data-ride="carousel">
      <div class="info card ">

         <div class="card-header">
           <ul class="navbar nav">
              <li class="nav-item">
                <a href="#carouselExampleIndicators" role="button" data-slide-to="0" class="nav-link ">
                  <h5>Info</h5>
                  </a>
              </li>
              <li class="nav-item">
                <a href="#carouselExampleIndicators" role="button" data-slide-to="1" class="bnav-link text-orange">
                    <h5>Rating</h5>
                  </a>
              </li>

            </ul>
       </div>
      <div class="card-body carousel-inner">
        <div class="carousel-item active">
          <table>
            <tbody>
              <tr>
                <td><strong>Resto name:</strong></td>
                <td><%= @resto.name %></td>
              </tr>
              <tr>
                <td><strong>Location:</strong></td>
                <td><%= @resto.location %></td>
              </tr>
              <tr>
                <td><strong>Website:</strong></td>
                <td><%= @resto.website %></td>
              </tr>
              <tr>
                <td><strong>Online delivery:</strong></td>
                <% if @resto.online_delivery == false %>
                  <td>No</td>
                <% else %>
                  <td>Yes</td>
                <% end %>
              </tr>
              <tr>
                <td><strong>Table booking:</strong></td>
                <% if @resto.table_booking == false %>
                  <td>No</td>
                <% else %>
                  <td>Yes</td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="carousel-item">
            <div id="comments_area">
              <!-- Render to display the posted comment list on the restorent detail page -->
              <%= render partial: 'comments/index', locals: { comments: @comments, resto: @resto } %>
            </div>

            <!-- Render to display the comment field on the restoent detail page -->
            <%= render partial: 'comments/form', locals: { comment: @comment, resto: @resto } %>
           </div>
        </div>
      </div>
    </div>
</div>
  <div class="col-md-6 d-block py-5">
    <div class="menu card mr-5">
    <div class="card-header text-orange">
      <h4>Menu</h4>
    </div>
    <div class="card-body">
      <h2 ><b>Breakfast</b></h2>
      <% @resto.break_fasts.each do |break_fast| %>
        <table class="table table-borderless table-sm">
          <tbody>
            <tr>
              <td><%= break_fast.item %></td>
              <td class="text-right text-orange"><%= break_fast.price %>Rwf</td>
            </tr>
          </tbody>
        </table>
      <% end %>
      <hr>
      <h2><b>Lunch</b></h2>
      <% @resto.lunches.each do |lunch| %>
      <table class="table table-borderless table-sm">
        <tbody>
          <tr>
            <td><%= lunch.item %></td>
            <td class="text-right text-orange"><%= lunch.price %>Rwf</td>
          </tr>
        </tbody>
      </table>
      <% end %>
      <% if logged_in? && current_user.id == @resto.user_id %>
        <%= link_to 'Update Menu', edit_restaurant_path(@resto), class: "btn bg-orange shadow-sm text-white" %>
      <% end %>
    </div>
    </div>
  </div>
</div>
</div>